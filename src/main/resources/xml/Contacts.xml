<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.accp.dao.ContactsDao">
    <select id="queryContactsByCustomerId" resultType="Contacts">
        SELECT * FROM contactsinfo WHERE customerId = #{customerId}
    </select>

    <insert id="addContacts">
        INSERT INTO contactsinfo VALUES(customerId,contactsName,contactsTel,contactsFax,contactsEmail,contactsPost) VALUES
        (#{customerId},#{contactsName},#{contactsTel},#{contactsFax},#{contactsEmail},#{contactsPost})
    </insert>
</mapper>